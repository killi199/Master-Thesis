\def\titlepagebackground{%
    \begin{tikzpicture}
        \useasboundingbox (0,0) rectangle(\paperwidth,\paperheight);
        \fill[top color=white, bottom color=hswsilver!15!white, shading angle=62.5]
        (0,0) --
        (\paperwidth,0) --
        (\paperwidth,\paperheight) --
        (0,\paperheight) --
        cycle;
        \filldraw[themecolor]
        (\paperwidth,\paperheight) --
        (\paperwidth,0) --
        (\paperwidth-180,0) --
        +(62.5:1.127\paperheight) -- % h = c * sin(É‘) --> c = ...
        cycle;
        \node at (\paperwidth-66,3.33) {\pgfuseimage{hswlogofull}};
        \ifx\colortheme\empty
            \draw[barsega, line width=2] (\paperwidth-181,-0.1) -- +(62.5:1.142\paperheight);
            \draw[barsegb, line width=2] (\paperwidth-181,-0.1) -- +(62.5:0.752\paperheight);
            \draw[barsegc, line width=2] (\paperwidth-181,-0.1) -- +(62.5:0.367\paperheight);
        \fi
    \end{tikzpicture}
}

\setbeamertemplate{title page}{%
    \begin{beamercolorbox}[left, wd=0.9\textwidth, ignorebg]{title}
        \usebeamerfont{title}\inserttitle
    \end{beamercolorbox}

    \vspace{5mm}

    \begin{beamercolorbox}[left, wd=0.7\textwidth, ignorebg]{subtitle}
        \usebeamerfont{subtitle}\insertsubtitle
    \end{beamercolorbox}

    \vfill

    \begin{beamercolorbox}[left, ignorebg]{date}
        \usebeamerfont{date}\insertdate
    \end{beamercolorbox}

    \vspace{5mm}

    \ifx\insertinstitute\empty\else
        \begin{beamercolorbox}[left, ignorebg]{institute}
            \usebeamerfont{institute}\insertinstitute
        \end{beamercolorbox}
        \vspace{1mm}
    \fi

    \begin{beamercolorbox}[left, ignorebg]{author}
        \usebeamerfont{author}\insertauthor
    \end{beamercolorbox}

    \ifx\inserthomepage\empty\else
        \vspace{1mm}
        \begin{beamercolorbox}[left, ignorebg]{homepage}
            \usebeamerfont{homepage}\inserthomepage
        \end{beamercolorbox}
    \fi

    \vspace{-15mm}
}

\setbeamertemplate{section page}{%
    \vfill
    \begin{beamercolorbox}{section name}
        \centering\usebeamerfont{section title}\insertsection
    \end{beamercolorbox}
    \vfill
}

\setbeamertemplate{subsection in toc}{%
    \leavevmode\leftskip=5ex%
    \llap{%
        \usebeamerfont*{section number projected}%
        \usebeamercolor[bg]{section number projected}%
        \vrule width2.25ex height1.85ex depth.4ex%
        \hskip-2.25ex%
        \hbox to2.25ex{\color{fg}\inserttocsectionnumber.\inserttocsubsectionnumber}}%
    \kern1.25ex\inserttocsubsection\par
}

\setbeamertemplate{itemize item}{\raisebox{0.5ex}{\scalebox{0.4}{\fcolorbox{hswbase}{hswbase}{}}}}
\setbeamertemplate{itemize subitem}{\raisebox{0.5ex}{\scalebox{0.4}{\fcolorbox{hswbase}{white}{}}}}
\setbeamertemplate{itemize subsubitem}{\raisebox{0.5ex}{\scalebox{0.4}{\fcolorbox{hswbase}{hswbase}{}}}}

\setbeamertemplate{frametitle}{%
    \vspace{2mm}
    \begin{beamercolorbox}[left]{frametitle}
        \usebeamerfont{frametitle}\insertframetitle
    \end{beamercolorbox}
    \ifx\insertframesubtitle\empty\else
        \begin{beamercolorbox}[left]{framesubtitle}
            \usebeamerfont{framesubtitle}\insertframesubtitle
        \end{beamercolorbox}
    \fi
