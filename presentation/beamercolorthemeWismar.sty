\mode<presentation>

% =============
%  base colors
% =============

\def\lightness{10}

% charcoal / gray (HKS 97)
\definecolor{hswgray}{RGB/HTML}{47,50,41/2F3229}
\colorlet{hswcharcoal}{hswgray}
\colorlet{hswbase}{hswgray}

% silver / light gray (HKS 99)
\definecolor{hswlgray}{RGB/HTML}{175,175,175/AFAFAF}
\colorlet{hswlightgray}{hswlgray}
\colorlet{hswsilver}{hswlgray}

% blue (HKS 50) -- faculty of engineering
\definecolor{fiwblue}{RGB/HTML}{0,177,219/00B1DB}
\colorlet{fiwblue-light}{fiwblue!\lightness!white}

% green (HKS 65) -- business school
\definecolor{fwwgreen}{RGB/HTML}{51,153,51/339933}
\colorlet{fwwgreen-light}{fwwgreen!\lightness!white}

% orange (HKS 7) -- faculty of architecture and design
\definecolor{fgorange}{RGB/HTML}{255,93,2/FF5D02}
\colorlet{fgorange-light}{fgorange!\lightness!white}

\definecolor{warning}{RGB/HTML}{223,74,67/DF4A43}
\colorlet{warning-light}{warning!\lightness!white}

% ================
%  default colors
% ================

\colorlet{themecolor}{hswgray}
\colorlet{themecolor-light}{themecolor!\lightness!white}
\colorlet{barsega}{fiwblue}
\colorlet{barsegb}{fwwgreen}
\colorlet{barsegc}{fgorange}

% =================
%  Beamer's colors
% =================

